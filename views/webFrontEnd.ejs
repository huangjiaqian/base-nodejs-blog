<!doctype html>
<%include layout/about-desc.ejs %>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title><%=title%></title>
<link href="<%=contextPath%>/css/bootstrap.min.css" type="text/css" rel="stylesheet">
<link href="<%=contextPath%>/css/style.css" type="text/css" rel="stylesheet">
<link type="text/css" href="<%=contextPath%>/css/nprogress.css" rel="stylesheet">
<!--[if lt IE 9]>
    <script src="js/html5shiv.min.js" type="text/javascript"></script>
    <script src="js/respond.min.js" type="text/javascript"></script>
    <script src="js/selectivizr-min.js" type="text/javascript"></script>
<![endif]-->
<link rel="apple-touch-icon-precomposed" href="<%=contextPath%>/images/icon/icon.png">
<link rel="shortcut icon" href="<%=contextPath%>/images/icon/favicon.ico">
<meta name="Keywords" content="" />
<meta name="description" content="" />
<script type="text/javascript">
//判断浏览器是否支持HTML5
window.onload = function() {
	if (!window.applicationCache) {
		window.location.href="ie.html";
	}
}
</script>
</head>

<body>
<section class="container user-select">
  <%include layout/header.ejs %>

  <div class="content-wrap"><!--内容-->
    <div class="content">
      <div class="content-block new-content">
        <h2 class="title"><strong>文章列表</strong></h2>
        <%include layout/article-list.ejs %>
      </div>
    <div class="quotes" style="margin-top:15px;margin-bottom:20px;"></div>
    </div>
  </div>
  <!--/内容-->

  <%include layout/aside.ejs %>
  <%include layout/footer.ejs %>
</section>

<div><a href="javascript:;" class="gotop" style="display:none;"></a></div>
<!--/返回顶部-->

<%include layout/scripts.ejs %>

<script src="js/jquery.pagination.js" type="text/javascript"></script>
<script type="text/javascript">
$(function(){
  $('.quotes').pagination({
      totalData:<%=total%>,
      pageCount:<%=totalPage%>,
      showData:10,
      current: <%=current%>,
      //jump: true,
      coping: true,
      //count: 2,
      homePage: '首页',
      endPage: '末页',
      prevContent: '上页',
      nextContent: '下页',
      callback: function(obj){
        window.location.href = '/index.html?page='+obj.getCurrent();
      } //pageCallback() 为翻页调用次函数。
  });
});
</script>

</body>
</html>
