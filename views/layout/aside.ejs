<aside class="sidebar visible-lg"><!--右侧>992px显示-->
    <div class="sentence"> <strong>每日一句</strong>
      <h2><%=dateFormat(diary.createTime,'yyyy-mm-dd')%>&nbsp;星期<%=utils.date2Week(diary.createTime)%></h2>
      <p><%=diary.content%></p>
    </div>
    <div id="search" class="sidebar-block search" role="search">
      <h2 class="title"><strong>搜索</strong></h2>
      <form class="navbar-form" method="post">
        <div class="input-group">
          <input type="text" id="searchContext" class="form-control" size="35" placeholder="请输入关键字">
          <span class="input-group-btn">
          <button class="btn btn-default btn-search" id="searchArticleBtn" type="button">搜索</button>
          </span> </div>
      </form>
    </div>
    <div class="sidebar-block recommend">
      <h2 class="title"><strong>热门推荐</strong></h2>
      <ul>
        <%
          hotArticles.forEach(function(hotArticle){
            var hTitle = hotArticle.title.length > 20?hotArticle.title.substring(0,20)+'...':hotArticle.title;
        %>
          <li><a target="_blank" href="<%=contextPath%>/article/<%=hotArticle._id%>"> <span class="thumb">
          
          <img src="<%=contextPath%>/images/icon/icon.png" alt=""></span> 
          
          <span class="text"><%=hTitle%></span>
           <span class="text-muted">阅读(<%=hotArticle.readNum?hotArticle.readNum:0%>)</span></a></li>
        <%
          });
        %>
        
      </ul>
    </div>
